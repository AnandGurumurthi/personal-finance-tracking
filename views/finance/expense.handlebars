<script type="text/javascript">
$(document).ready(function() {
	$(".expense-category").select2({
		tags: true
	});
});
</script>

<h2 class="page-header">Add Expense</h2>
{{#if errors}}
{{#each errors}}
<div class="alert alert-danger">{{msg}}</div>
{{/each}}
{{/if}}
<div>
	<form class="form-inline" action="/finance/expense" method="post">
		<div class="form-group">
			<label for="category">Category</label>
			<select class="form-control expense-category" id="category" name="category" style="width: 200px;">
				<option value="Groceries">Groceries</option>
				<option value="Entertainment">Entertainment</option>
			</select>
		</div>
		<div class="form-group" style="margin-left: 10px;">
			<label for="amount">Amount</label>
			<input type="text" class="form-control" id="amount" name="amount" placeholder="Enter amount">
		</div>
		<button type="submit" class="btn btn-default" style="margin-left: 10px;">Add Expense</button>
	</form>
</div>