<h2 class="page-header">Add Expense</h2>
{{#if errors}}
{{#each errors}}
<div class="alert alert-danger">{{msg}}</div>
{{/each}}
{{/if}}
<div class="col-lg-4">
	<form action="/finance/expense" method="post">
		<div class="form-group">
			<label for="category">Category</label>
			<select class="form-control expense-category" id="category" name="category">
				<option value="Groceries">Groceries</option>
				<option value="Entertainment">Entertainment</option>
				<option value="Rent">Rent</option>
				<option value="Car Loan">Car Loan</option>
				<option value="Car Insurance">Car Insurance</option>
				<option value="Phone">Phone</option>
				<option value="Comcast">Comcast</option>
				<option value="PGE">PGE</option>
				<option value="Fuel">Fuel</option>
				<option value="Netflix">Netflix</option>
			</select>
		</div>
		<div class="form-group">
			<label for="amount">Amount</label>
			<div class="input-group">
				<div class="input-group-addon">$</div>
				<input type="text" class="form-control" id="amount" name="amount">
			</div>
		</div>
		<div class="form-group">
			<label for="date">Date of transaction</label> 
			<div class="input-group">
			<input type="text" area-describedby="helpBlock" class="form-control" name="date" id="datepicker">
			<div class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></div>
			</div>
		</div>
		<button type="submit" class="btn btn-primary">Add Expense</button>
	</form>
</div>

<script>
$(function() {
	$("#datepicker").datepicker({
      changeMonth: true,
      changeYear: true,
      showButtonPanel: true
    });
    $("#datepicker").datepicker("setDate", new Date());
});

$(document).ready(function() {
	$(".expense-category").select2({
		tags: true
	});
});
</script>